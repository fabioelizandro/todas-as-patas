{% extends "TodasAsPatasWebBundle:Frontend:templateProfile.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        label{
            margin: 0px !important;
            padding: 0px !important;
            width: 100% !important;
            text-align: left !important;
        }
    </style>
{% endblock %}


{% block content %}


    <div class="login-wrapper" style="top: 30px; color: #000;" >
        <div class="logo" >
            <span class="fa fa-paw fa-4x"></span>
            <span class="fa-4x" style='font-family: "Helvetica Neue",Helvetica,Arial,sans-serif !important;'> Todas as Patas</span>
        </div>
        <div class="box" style="background-color: #fff;">
            <div class="content-wrap">
                <h6>Alterar a senha</h6>
                {% if error|default(false) %}
                    <div>{{ error|trans }}</div>
                {% endif %}
                {% block messages %}
                    {% include 'TodasAsPatasWebBundle:Frontend:flashes.html.twig' %}
                {% endblock %}
                {{ form_start(form) }}
                {{ form_label(form.confirmationPassword, 'Senha Atual') }}<br>
                {{ form_widget(form.confirmationPassword) }}
                {{ form_label(form.plainPassword.first, 'Nova Senha') }}<br>
                {{ form_widget(form.plainPassword.first) }}
                {{ form_label(form.plainPassword.second, 'Confirmar Senha') }}<br>
                {{ form_widget(form.plainPassword.second) }}
                <div class="form-group">
                    <div class="col-sm-9 col-sm-offset-3">
                        <ul class="record_actions list-inline list-unstyled">
                            <li>
                                <button type="submit" class="btn btn-primary">Alterar Senha</button>
                            </li>
                            <li>
                                <a class="btn btn-link" href="javascript: window.history.back();">
                                    Voltar
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
