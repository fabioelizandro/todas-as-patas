{% extends 'TodasAsPatasWebBundle:Backend:template.html.twig' %}


{% block page_title %} Grupo {{ group.name }} {% endblock %}

{% block page -%}


    <div class="row">
        <div class="col-xs-12">
            <table class="record_properties table table-bordered table-hover table-responsive table-striped">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ group.id }}</td>
                    </tr>
                    <tr>
                        <th>Nome</th>
                        <td>{{ group.name }}</td>
                    </tr>
                    <tr>
                        <th>Regras</th>
                        <td>
                            <ul>
                                {% for role in group.rolesAsObject %}
                                    <li>{{ role }}</li>
                                    {% endfor %}
                            </ul>
                        </td>
                    </tr>
                </tbody>
            </table>

            <ul class="record_actions list-inline list-unstyled">
                <li>
                    <a class="btn btn-link" href="{{ path('app_group_index') }}">
                        Voltar para a lista
                    </a>
                </li>
                <li>
                    <a class="btn btn-primary" href="{{ path('app_group_update', { 'id': group.id }) }}">
                        Editar
                    </a>
                </li>
                <li>
                    <input form="group-delete" type="submit" class="btn btn-danger" value="Deletar" />
                </li>
            </ul>
        </div>
    </div>

{% endblock %}
