{% extends 'TodasAsPatasWebBundle:Backend:template.html.twig' %}

{% block page_title %} {{ country.name }} {% endblock %}

{% block page -%}
    <div class="row">
        <div class="col-xs-12">
            <table class="record_properties table table-bordered table-hover table-responsive table-striped">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ country.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ country.name }}</td>
                    </tr>
                </tbody>
            </table>

            <h3>Estados</h3>

            <table class="record_properties table table-bordered table-hover table-responsive table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Sigla</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {% for state in country.states %}
                        <tr>
                            <td>{{ state.id }}</td>
                            <td>{{ state.name }}</td>
                            <td>{{ state.acronym }}</td>
                            <td>
                                <div class="btn-group btn-group-xs">
                                    <a class="btn btn-primary" href="{{ path('app_state_update', {'id' : state.id }) }}">Cidades</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <ul class="record_actions list-inline list-unstyled">
                <li>
                    <a class="btn btn-link" href="{{ path('app_country_index') }}">
                        Voltar para a lista
                    </a>
                </li>
                <li>
                    <a class="btn btn-primary" href="{{ path('app_country_update', { 'id': country.id }) }}">
                        Editar
                    </a>
                </li>
                <li>
                    <form id="country-delete" method="post" action="{{ path('app_country_delete', { 'id': country.id }) }}">
                        <input form="country-delete" type="submit" class="btn btn-danger" value="Deletar" />
                        <input type="hidden" name="_method" value="DELETE" />
                    </form>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
