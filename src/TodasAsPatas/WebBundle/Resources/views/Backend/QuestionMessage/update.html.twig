{% extends 'TodasAsPatasWebBundle:Backend:template.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset("bundles/todasaspatasweb/backend/css/compiled/form-wizard.css")}}" type="text/css" media="screen" />
{% endblock %}

{% block page_title -%}Responder{% endblock %}

{% block page_pad_attr %}class="form-page"{% endblock %}

{% block page -%}

    <div class="row">
        <div class="col-md-8">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    <ul class="record_actions list-inline list-unstyled">
                        <li>
                            <button type="submit" class="btn btn-primary">Responder</button>
                        </li>
                        <li>
                            <a class="btn btn-link" href="{{ path('app_questionmessage_show', {'id': questionmessage.id }) }}">
                                Voltar
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset("bundles/todasaspatasweb/backend/js/jquery.uniform.min.js")}}"></script>

    <script type="text/javascript">
        $(function () {
            $("input:checkbox, input:radio").uniform();
        });
    </script>
{% endblock %}

