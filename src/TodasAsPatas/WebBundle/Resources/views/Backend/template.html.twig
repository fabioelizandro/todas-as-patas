{% extends "::base.html.twig" %}

{% block title %}Admin{% endblock %}

{% block meta %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}

{% block stylesheets %}
    {% stylesheets filter='cssrewrite' output='css/compiled/main.css'
        'bundles/todasaspatasweb/plugins/bootstrap-3.2.0-dist/css/bootstrap.css' 
        'bundles/todasaspatasweb/backend/css/bootstrap/bootstrap-overrides.css' 
        'bundles/todasaspatasweb/backend/css/compiled/layout.css' 
        'bundles/todasaspatasweb/backend/css/compiled/elements.css' 
        'bundles/todasaspatasweb/backend/css/compiled/icons.css' 
        'bundles/todasaspatasweb/backend/css/compiled/skins/tap.css' 
        'bundles/todasaspatasweb/backend/css/style.css' 
        'bundles/todasaspatasweb/plugins/smalot-bootstrap-datetimepicker/build/style.css'
        'bundles/todasaspatasweb/plugins/select2/select2.css'
        'bundles/todasaspatasweb/plugins/select2/select2-bootstrap.css'
        'bundles/todasaspatasweb/plugins/font-awesome-4.2.0/css/font-awesome.min.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css' />

    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
{% endblock %}


{% block body %}

    {% block header %}
        <header class="navbar navbar-inverse" role="banner">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" id="menu-toggler">
                    <span class="sr-only">Alternar navegação</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('todasaspatas_web_backend_home') }}"><h2 class="navbar-logo-text">TAP</h2></a>
            </div>
            {% block user_info %}
                <ul class="nav navbar-nav pull-right hidden-xs">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Sua Conta
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="{{ path("app_useradmin_profile") }}">Informações da Conta</a>
                            </li>
                        </ul>
                    </li>
                    <li class="settings">
                        <a href="{{ path("fos_user_security_logout") }}" role="button">
                            <i class="icon-share-alt"></i>
                        </a>
                    </li>
                </ul>
            {% endblock %}
        </header>
    {% endblock %}

    {% block sidebar_nav %}
        <div id="sidebar-nav">
            {{ knp_menu_render('backend_main', {"template" : "TodasAsPatasWebBundle:Backend/Templates:menu.html.twig"}) }}
        </div>
    {% endblock %}

    {% block page_content %}
        <div class="content">

            {% block page_pad %}
                <div id="pad-wrapper" {% block page_pad_attr %}{% endblock %}>

                    {% block page_header %}
                        <div class="row header">
                            <div class="col-md-12">
                                <h2>{% block page_title %}Titulo da página{% endblock %}</h2>
                            </div>                
                        </div>
                    {% endblock %}

                    <div class="row">
                        <div class="col-xs-12">
                            {% include 'TodasAsPatasWebBundle:Backend:flashes.html.twig' %}
                        </div>
                    </div>
                {% block page %}{% endblock %}

            </div>
        {% endblock %}

    </div>
{% endblock %}

{% block footer %}{% endblock %}

{% endblock %}


{% block javascripts %}
    {% javascripts output='js/compiled/main.js'
    '@TodasAsPatasWebBundle/Resources/public/backend/js/jquery-1.10.2.js'
    '@TodasAsPatasWebBundle/Resources/public/plugins/bootstrap-3.2.0-dist/js/bootstrap.min.js'
    '@TodasAsPatasWebBundle/Resources/public/backend/js/theme.js'
    '@TodasAsPatasWebBundle/Resources/public/plugins/smalot-bootstrap-datetimepicker/js/bootstrap-datetimepicker.js'
    '@TodasAsPatasWebBundle/Resources/public/plugins/smalot-bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.pt-BR.js'
    '@TodasAsPatasWebBundle/Resources/public/plugins/jquery.inputmask/dist/jquery.inputmask.bundle.min.js'
    '@TodasAsPatasWebBundle/Resources/public/plugins/select2/select2.min.js'
    '@TodasAsPatasWebBundle/Resources/public/plugins/select2/select2_locale_pt-BR.js'
    '@TodasAsPatasWebBundle/Resources/public/backend/js/custom.js'
    %}

    <script src="{{ asset_url }}"></script>

    {% endjavascripts %}
{% endblock %}