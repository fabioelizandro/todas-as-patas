{% extends 'form_div_layout.html.twig' %}

{% block form_row %}
{% spaceless %}
    {% if errors|length > 0 %}
    {%set classErro = "error" %}
    {% endif %}
    <div class="field-box {{classErro|default("")}}">
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}

{% block form_widget_simple %}
{% spaceless %}
    {% set type = type|default('text') %}
        <input class="form-control" type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
    
    {% if help is defined %}
        <span class="alert-msg">{{ help }}</span>
    {% endif %}
{% endspaceless %}
{% endblock form_widget_simple %}
        
{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    <ul class="list-unstyled">
        {% for error in errors %}
        <li><span class="alert-msg"><i class="icon-remove-sign"></i> {{ error.message }}</span></li>
        {% endfor %}
    </ul>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}