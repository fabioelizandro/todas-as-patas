{% extends 'TodasAsPatasWebBundle:Backend:template.html.twig' %}


{% block page_title %} Ra√ßa {{ breed.name }}{% endblock %}

{% block page -%}


    <div class="row">
        <div class="col-xs-12">
            <table class="record_properties table table-bordered table-hover table-responsive table-striped">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ breed.id }}</td>
                    </tr>
                    <tr>
                        <th>Nome</th>
                        <td>{{ breed.name }}</td>
                    </tr>
                    <tr>
                        <th>Tipo</th>
                        <td>{{ breed.type }}</td>
                    </tr>
                    <tr>
                        <th>Criado em</th>
                        <td>{{ breed.createdAt|date('d/m/Y H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Atualizado em</th>
                        <td>{{ breed.updatedAt|date('d/m/Y H:i:s') }}</td>
                    </tr>
                </tbody>
            </table>

            <ul class="record_actions list-inline list-unstyled">
                <li>
                    <a class="btn btn-link" href="{{ path('app_breed_index') }}">
                        Voltar para a lista
                    </a>
                </li>
                <li>
                    <a class="btn btn-primary" href="{{ path('app_breed_update', { 'id': breed.id }) }}">
                        Editar
                    </a>
                </li>
                <li>
                    <form id="breed-delete" method="post" action="{{ path('app_breed_delete', { 'id': breed.id }) }}">
                        <input form="breed-delete" type="submit" class="btn btn-danger" value="Deletar" />
                        <input type="hidden" name="_method" value="DELETE" />
                    </form>
                </li>
            </ul>
        </div>
    </div>

{% endblock %}
