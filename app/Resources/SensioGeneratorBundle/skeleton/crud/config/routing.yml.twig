{% if 'index' in actions %}
{{ route_name_prefix }}_index:
    pattern:  /
    methods: [GET]
    defaults: 
        _controller: "app.controller.{{ entity|lower }}:indexAction"
        _sylius:
            sorting:
                id: desc
{% endif %}

{% if 'show' in actions %}
{{ route_name_prefix }}_show:
    pattern:  /{id}/show
    methods: [GET]
    defaults: 
        _controller: "app.controller.{{ entity|lower }}:showAction"
{% endif %}

{% if 'new' in actions %}
{{ route_name_prefix }}_create:
    pattern:  /create
    methods: [GET, POST]
    defaults: 
        _controller: "app.controller.{{ entity|lower }}:createAction"
        _sylius: 
            form: {{ form_type_name }}
{% endif %}

{% if 'edit' in actions %}
{{ route_name_prefix }}_update:
    pattern:  /{id}/update
    methods: [GET, PUT]
    defaults: 
        _controller: "app.controller.{{ entity|lower }}:updateAction"
        _sylius: 
            form: {{ form_type_name }}
{% endif %}

{% if 'delete' in actions %}
{{ route_name_prefix }}_delete:
    pattern:  /{id}/delete
    methods: [DELETE]
    defaults: 
        _controller: "app.controller.{{ entity|lower }}:deleteAction"
{% endif %}